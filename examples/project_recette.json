  "network": [
    "emu",
    "lan_gw",
    "lan_st"
  ],
  "scenario": [
    {
      "name": "Ping",
      "description": "Comparaison between 2 ping Jobs",
      "arguments": {},
      "constants": {
          "gw0": "172.20.34.38",
          "st1": "172.20.34.30"
      },
      "openbach_functions": [
        {
          "start_job_instance": {
            "agent_ip": "$gw0",
            "iperf": {
              "mode": "-s"
            },
            "offset": 0
          },
          "wait": {
            "time": 0,
            "launched_indexes": [],
            "finished_indexes": []
          }
        },
        {
          "start_job_instance": {
            "agent_ip": "$st1",
            "iperf": {
              "mode": "-c 172.20.34.38"
            },
            "offset": 0
          },
          "wait": {
            "time": 0,
            "launched_indexes": [1],
            "finished_indexes": []
          }
        },
        {
          "start_job_instance": {
            "agent_ip": "$st1",
            "ping": {
              "count": "3",
              "destination_ip": "$gw0"
            },
            "offset": 0
          },
          "wait": {
            "time": 0,
            "launched_indexes": [],
            "finished_indexes": []
          }
        },
        {
          "start_job_instance": {
            "agent_ip": "$st1",
            "ping": {
              "destination_ip": "$gw0"
            },
            "offset": 0
          },
          "wait": {
            "time": 0,
            "launched_indexes": [],
            "finished_indexes": []
          }
        }
      ]
    },
    {
      "name": "Sandbox",
