#!/bin/bash
# openbach-agent daemon
# description: openbach-agent daemon
# processname: openbach-agent

DAEMON_PATH="/opt/openbach-agent/"

DAEMON=./openbach-agent.py
DAEMONOPTS=""

NAME=openbach-agent
DESC="My daemon description"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
start)
    printf "%-50s" "Starting $NAME..."
    cd $DAEMON_PATH
    PID=`python $DAEMON $DAEMONOPTS > /dev/null 2>&1 & echo $!`
    #echo "Saving PID" $PID " to " $PIDFILE
    if [ -z $PID ]; then
        printf "%s\n" "Fail"
        exit 1
    else
        echo $PID > $PIDFILE
        printf "%s\n" "Ok"
    fi
;;
status)
    printf "%-50s" "Checking $NAME..."
    hostname=`cat /etc/hostname`
    timestamp=`echo $(date +%s%N)`
    if [ -f $PIDFILE ]; then
    PID=`cat $PIDFILE`
        if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
            printf "%s\n" "Process dead but pidfile exists"
            curl -i -XPOST 'http://172.20.0.88:8086/write?db=openbach' --data-binary "$hostname status=\"Agent reachable but daemon not running\" $timestamp" > /dev/null 2>&1
            exit 1
        else
            curl -i -XPOST 'http://172.20.0.88:8086/write?db=openbach' --data-binary "$hostname status=\"Available\" $timestamp" > /dev/null 2>&1
            echo "Running"
        fi
    else
        curl -i -XPOST 'http://172.20.0.88:8086/write?db=openbach' --data-binary "$hostname status=\"Agent reachable but daemon not running\" $timestamp" > /dev/null 2>&1
        printf "%s\n" "Service not running"
        exit 1
    fi
;;
stop)
    printf "%-50s" "Stopping $NAME"
    PID=`cat $PIDFILE`
    cd $DAEMON_PATH
    if [ -f $PIDFILE ]; then
        kill -HUP $PID
        printf "%s\n" "Ok"
        rm -f $PIDFILE
    else
        printf "%s\n" "pidfile not found"
    fi
;;

restart)
    $0 stop
    sleep 1
    $0 start
;;

*)
    echo "Usage: $0 {status|start|stop|restart}"
    exit 1
esac
