server {
    listen       80;
    server_name  localhost;

    #charset koi8-r;
    #access_log  /var/log/nginx/log/host.access.log  main;

    location / {
        root   /usr/share/nginx/html;
        index  index.html;
        try_files $uri /index.html;
    }

    location /openbach/ {
        proxy_pass http://{{ controller_ip }}:8000/;
        proxy_set_header Host $host;
    }

    location /kibana {
        return 301 http://{{ controller_ip }}:5601/;
    }

    location /grafana {
        return 301 http://{{ controller_ip }}:3000/;
    }
}
